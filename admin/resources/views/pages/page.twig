{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="{{ base_url() }}">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">PÃ¡ginas</li>
        </ol>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editar</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="panel panel-container">
         <div class="row">
            <div class="col-xs-12">
                  {% include 'templates/partials/flash.twig' %}
                  <form action="{{ path_for('page.editPage') }}" method="post" autocomplete="off">
                     <div class="form-group">
                        <label for="">Titulo</label>
                        <input type="text" name="title" value="{{ pages.title }}" class="form-control">
                     </div>
                     <div class="form-group">
                        <label for="">Contenido</label>
                        <textarea name="content" id="page_content" cols="30" rows="10" class="form-control">{{ pages.content | raw}}</textarea>
                     </div>
                     <input type="hidden" name="id_page" value="{{ pages.id_page }}">
                     {{ csrf.field | raw }}
                     <div class="form-group">
                           <div class="col-md-12 widget-right">
                               <button type="submit" class="btn btn-primary btn-md pull-right">Editar</button>
                           </div>
                       </div>
                  </form>
            </div>
         </div>
   </div>


{% endblock %}