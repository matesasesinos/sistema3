{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="{{ base_url() }}">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Páginas</li>
        </ol>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Páginas estaticas</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="panel panel-container">
            <div class="row">
                <div class="col-xs-12">
                        {% include 'templates/partials/flash.twig' %}   
                        <table class="table table-striped table-bordered" id="tabla">
                            <thead>
                                    <tr>
                                            <th>ID</th>
                                            <th>Página</th>
                                            <th></th>
                                        </tr>
                            </thead>
                           <tbody>
                               {% for page in pages %}
                                    <tr>
                                        <td>{{ page.id_page }}</td>
                                        <td>{{ page.title }}</td>
                                        <td><a href="{{ path_for('page.edit', {'id_page': page.id_page})}}" class="btn btn-primary"><i class="far fa-eye"></i></a></td>
                                    </tr>
                               {% endfor %}
                           </tbody>
                        </table>
                </div>
            </div>
    </div>
    {% endblock %}