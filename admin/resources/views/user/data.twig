{% extends 'templates/app.twig' %}
{% block content %}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="{{ base_url() }}">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Usuarios</li>
    </ol>
</div>
<!--/.row-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ver o Editar</h1>
    </div>
</div>
<!--/.row-->
<div class="panel panel-container">
    <div class="row">
        <div class="col-xs-12">
                {% include 'templates/partials/flash.twig' %}
                <form action="{{ path_for('user.change') }}" method="post" autocomplete="off" class="form-horizontal">
                        <fieldset>    
                            <div class="form-group">
                                    <label class="col-md-3 control-label">Nombre<span class="required">*</span>
                                    </label>
                                    <div class="col-md-9">
                                            <input type="text" name="name" class="form-control input-field" value="{{ user.name }}">
                                            {% if errors.name %}
                                                <div class="invalid-feedback">{{ errors.name | first }}</div>
                                            {% endif %}
                                    </div>
                            </div>                        
                                <div class="form-group">
                                        <label class="col-md-3 control-label">Apellido<span class="required">*</span>
                                        </label>
                                        <div class="col-md-9">
                                                <input type="text" name="lastname" class="form-control input-field" value="{{ user.lastname }}">
                                                {% if errors.lastname %}
                                                    <div class="invalid-feedback">{{ errors.lastname | first  }}</div>
                                                {% endif %}
                                        </div>
                                </div>
                                <div class="form-group">
                                        <label class="col-md-3 control-label">Correo electrónico
                                                <span class="required">*</span>
                                            </label>
                                            <div class="col-md-9">
                                                    <input type="text" name="email" class="form-control input-field" value="{{ user.email }}">
                                                    {% if errors.lastname %}
                                                        <div class="invalid-feedback">{{ errors.lastname | first  }}</div>
                                                    {% endif %}
                                            </div>
                                </div>
                                <div class="form-group">
                                        <label class="col-md-3 control-label">Teléfono
                                                <span class="required">*</span>
                                            </label>
                                            <div class="col-md-9">
                                                    <input type="text" name="phone" class="form-control input-field" value="{{ user.phone }}">
                                                    {% if errors.phone %}
                                                        <div class="invalid-feedback">{{ errors.phone | first  }}</div>
                                                    {% endif %}
                                            </div>
                                </div>
                                

                            <input type="hidden" name="id" value="{{ user.id }}">
                       
                            <div class="form-group">
                                    <div class="col-md-12 widget-right">
                                        <button type="submit" class="btn btn-primary btn-md pull-right">Modificar</button>
                                    </div>
                                </div>
                        {{ csrf.field | raw }}
                    </fieldset> 
                </form>
        </div>
    </div>
</div>


{% endblock %}
