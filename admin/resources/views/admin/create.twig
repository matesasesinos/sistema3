{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="{{ base_url() }}">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Admimistradores</li>
        </ol>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Crear Administrador</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="panel panel-container">
        <div class="row">
            <div class="col-xs-12">
                    {% include 'templates/partials/flash.twig' %}
                <form action="{{ path_for('admin.create.post') }}" autocomplete="off" class="form-horizontal" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Nombre</label>
                            <div class="col-md-9">
                                <input class="form-control" name="name" placeholder="Nombre" value="{{ old.name }}" type="text">
                                {% if errors.name %}
                                  <div class="text-danger">{{ errors.name | first }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 control-label">Apellido</label>
                            <div class="col-md-9">
                                <input type="text" name="lastname" class="form-control" placeholder="Apellido" value="{{ old.lastname }}">
                                {% if errors.lastname %}
                                  <div class="text-danger">{{ errors.lastname | first }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                                <label for="" class="col-md-3 control-label">Teléfono</label>
                                <div class="col-md-9">
                                    <input type="text" name="phone" class="form-control" placeholder="Teléfono" value="{{ old.phone }}">
                                    {% if errors.phone %}
                                      <div class="text-danger">{{ errors.phone | first }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 control-label">Email</label>
                            <div class="col-md-9">
                                <input type="text" name="email" placeholder="Email" value="{{ old.email }}" class="form-control">
                                {% if errors.email %}
                                  <div class="text-danger">{{ errors.email | first }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 control-label">Contraseña</label>
                            <div class="col-md-9">
                                <input type="password" name="password" class="form-control">
                                {% if errors.password %}
                                  <div class="text-danger">{{ errors.password | first }}</div>
                                {% endif %}
                            </div>
                        </div>
                        {{ csrf.field | raw }}
                        <div class="form-group">
                                <div class="col-md-12 widget-right">
                                    <button type="submit" class="btn btn-primary btn-md pull-right">Crear</button>
                                </div>
                            </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
