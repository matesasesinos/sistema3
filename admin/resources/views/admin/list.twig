{% extends 'templates/app.twig' %}
{% block content %}
<div class="row">
    <ol class="breadcrumb">
       <li><a href="{{ base_url() }}">
          <em class="fa fa-home"></em>
       </a></li>
       <li class="active">Admimistradores</li>
    </ol>
 </div><!--/.row-->
 <div class="row">
    <div class="col-lg-12">
       <h1 class="page-header">Lista de administradores <span class="pull-right"><a href="{{ path_for('admin.create.form') }}" class="btn btn-primary">CREAR ADMINISTRADOR <i class="fas fa-user-plus"></i></a></span></h1>
    </div>
 </div><!--/.row-->
 <div class="panel panel-container">
    <div class="row">
        <div class="col-xs-12">
            {% include 'templates/partials/flash.twig' %}   
            <table class="table table-striped table-bordered" id="tabla">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for admin in admins %}
                        <tr>
                            <td>{{ admin.name }}</td>
                            <td>{{ admin.email }}</td>
                            <td><a href="">{{ admin.status == 0 ? '<div class="danger"><i class="fas fa-ban danger"></i></div>' : '<div class="success"><i class="fas fa-check"></i></div>' }}</a></td>
                            <td><a href="{{ path_for('admin.edit.form', {'id': admin.id})}}"><i class="fas fa-edit"></i></a> </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>    
{% endblock %}