{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="{{ base_url() }}">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Admimistradores</li>
        </ol>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editar Administrador </h1>
        </div>
    </div>
    <!--/.row-->
    <div class="panel panel-container">
        <div class="row">
            <div class="col-xs-12">
                 {% include 'templates/partials/flash.twig' %}
                <form action="{{ path_for('admin.edit.post') }}" autocomplete="off" class="form-horizontal" method="POST">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Nombre</label>
                            <div class="col-md-9">
                                <input class="form-control" name="name" placeholder="Nombre" value="{{ admin.name }}" type="text">
                                {% if errors.name %}
                                  <div class="text-danger">{{ errors.name | first }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                                <label class="col-md-3 control-label">Apellido</label>
                                <div class="col-md-9">
                                    <input class="form-control" name="lastname" placeholder="Nombre" value="{{ admin.lastname }}" type="text">
                                    {% if errors.lastname %}
                                      <div class="text-danger">{{ errors.lastname | first }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                    <label class="col-md-3 control-label">Teléfono</label>
                                    <div class="col-md-9">
                                        <input class="form-control" name="phone" placeholder="Nombre" value="{{ admin.phone }}" type="text">
                                    </div>
                                </div>    
                        <div class="form-group">
                            <label for="" class="col-md-3 control-label">Email</label>
                            <div class="col-md-9">
                                <input type="text" name="email" disabled placeholder="Email" value="{{ admin.email }}" class="form-control">
                                {% if errors.email %}
                                  <div class="text-danger">{{ errors.email | first }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 control-label">Contraseña</label>
                            <div class="col-md-9">
                                <input type="password" name="password" id="" value="" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-md-3 control-label">Estado</label>
                            <div class="col-md-9">
                                <select name="status" id="" class="form-control">
                                    <option value="1" {{ admin.status == 1 ? 'selected' : ''}}>Activo</option>
                                    <option value="0" {{ admin.status == 0 ? 'selected' : ''}}>Desactivado</option>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" name="id" value="{{ admin.id }}">
                        {{ csrf.field | raw }}
                        <div class="form-group">
                                <div class="col-md-12 widget-right">
                                    <button type="submit" class="btn btn-primary btn-md pull-right">Editar</button>
                                </div>
                            </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
